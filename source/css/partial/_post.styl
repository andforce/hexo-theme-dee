.post
  overflow: hidden
  margin-top: 30px
  background-color: #FFFFFF
  box-shadow: 1px 2px 3px #DDDDDD

.post__head
  margin: 50px 50px 10px 50px;

.post__head hr {
  margin: 1em auto;
  width: 100%;
  height: 5px;
  border: none;
  background: #eee;
}

.post__time
  color: #CCCCCC
  font-size-rem(12)

.post__title
  margin-top: 5px
  line-height: 1.3
  // 1.6 * 16
  font-size-rem(25.6)
  font-weight: normal
  > a
    color: #666666

.post__image
  display: block
  margin: 50px 0
  > img
    width: 100%

.post__main
  margin: 20px 50px 50px 50px;

.highlight
  //margin: 1.6em -60px
  //padding: 30px
  width: 100%
  figcaption
    padding: 0 30px
  table
    margin: 0
    width: auto
    border: none
  td
  th
    border: none
  pre
    margin: 0

h1
  // 1.6 * 16
  font-size-rem(25.6)

h2
  // 1.5 * 16
  font-size-rem(24.0)

h3
  // 1.4 * 16
  font-size-rem(22.4)

h4
  // 1.3 * 16
  font-size-rem(20.8)

h5
  // 1.2 * 16
  font-size-rem(19.2)

h6
  // 1.1 * 16
  font-size-rem(17.6)

blockquote
  //margin: 1.6em -60px
  //padding: 30px 60px
  padding: 5px 15px
  color: #777
  border-left: 5px solid #DDDDDD

//background-color: #EEEEEE
img
  //display: block
  margin: 1.6em auto

.post__foot
  padding: 5px 15px 5px
  border-top: 1px solid #DDDDDD
  background-color: #FAFAFA

.post__foot-link
  padding: 10px
  color: #999999
  font-size-rem(12)

.post__tag__item
  display: inline-block

.post__tag__link
  @extend .post__foot-link
  display: block
  &:hover
    color: #666666
  &:before
    content: "#"

.post__more
  @extend .post__foot-link
  padding: 10px 20px
  border: 1px solid #BBBBBB
  border-radius: 3px
  background-color: #CCCCCC
  color: #FFFFFF
  &:hover
    background-color: #DDDDDD
